{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": ".",
		"isolatedModules": true,
	},
	"include": ["index.ts", "src/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"],
}
